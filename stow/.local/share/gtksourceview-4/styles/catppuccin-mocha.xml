<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="catppuccin-mocha" _name="Catppuccin Mocha" version="1.0">
	<author>ooosahmad</author>
	<_description>Catppuccin Mocha color scheme</_description>

	<!-- Catppuccin mocha color palette -->
	<color name="base" value="#1e1e2e"/>
	<color name="surface" value="#313244"/>
	<color name="overlay" value="#6c7086"/>
	<color name="text" value="#cdd6f4"/>
	<color name="subtext" value="#bac2de"/>
	<color name="blue" value="#89b4fa"/>
	<color name="green" value="#a6e3a1"/>
	<color name="yellow" value="#f9e2af"/>
	<color name="red" value="#f38ba8"/>
	<color name="pink" value="#f5c2e7"/>
	<color name="mauve" value="#cba6f7"/>
	<color name="teal" value="#94e2d5"/>
	<color name="peach" value="#fab387"/>

	<!-- Custom colors for selection and current line -->
	<color name="selection-color" value="#45475a"/>
	<color name="current-line-color" value="#585b70"/>

	<!-- Global settings -->
	<style name="text" foreground="text" background="base"/>
	<style name="selection" foreground="text" background="selection-color"/>
	<style name="cursor" foreground="text"/>
	<style name="secondary-cursor" foreground="text"/>
	<style name="selection-unfocused" foreground="base" background="text"/>
	<style name="current-line" background="current-line-color"/>
	<style name="line-numbers" foreground="overlay" background="base"/>
	<style name="background-pattern" background="base"/>
	<style name="bracket-match" foreground="yellow" background="surface"/>
	<style name="bracket-mismatch" foreground="red" background="surface"/>
	<style name="search-match" foreground="text" background="surface"/>

	<!-- Syntax highlighting -->
	<style name="def:keyword" foreground="mauve" bold="true"/>
	<style name="def:statement" foreground="mauve"/>
	<style name="def:function" foreground="green"/>
	<style name="def:decimal" foreground="peach"/>
	<style name="def:preprocessor" foreground="blue"/>
	<style name="def:type" foreground="teal"/>

	<style name="def:character" foreground="yellow"/>

	<style name="def:comment" foreground="overlay"/>
	<style name="def:number" foreground="peach"/>
	<style name="def:string" foreground="yellow"/>
	<style name="def:net-address-in-comment" foreground="blue" italic="true"
		underline="true"/>
	<style name="def:underlined" italic="true" underline="true"/>
	<style name="def:note" foreground="blue" background="base" bold="true"/>
	<style name="def:error" foreground="red" bold="true"/>
	<style name="def:escape" foreground="mauve"/>
	<style name="def:shebang" foreground="mauve" bold="true"/>
	<style name="def:doc-comment-element" foreground="teal" italic="true"/>
	<style name="def:identifier" foreground="green" bold="true"/>

	<style name="def:specials" foreground="text" background="mauve"/>

	<style name="def:variable" foreground="peach"/>
	<style name="def:boolean" foreground="mauve" bold="true"/>
	<style name="def:constant" foreground="mauve"/>
	<style name="def:special-constant" foreground="mauve" bold="true"/>

	<style name="diff:added-line" foreground="green"/>
	<style name="diff:removed-line" foreground="red"/>
	<style name="diff:changed-line" foreground="yellow"/>
	<style name="diff:diff-file" foreground="blue" bold="true"/>
	<style name="diff:location" foreground="teal"/>
	<style name="diff:special-case" foreground="pink" bold="true"/>

	<style name="latex:command" foreground="peach" bold="true"/>
	<style name="latex:include" use-style="def:preprocessor"/>

	<style name="def:emphasis" foreground="pink" italic="true"/>
	<style name="def:strong-emphasis" foreground="pink" bold="true"/>
	<style name="def:inline-code" foreground="peach"/>
	<style name="def:insertion" foreground="green" underline="single"/>
	<style name="def:deletion" foreground="red" strikethrough="true"/>
	<style name="def:link-text" foreground="blue"/>
	<style name="def:link-symbol" foreground="blue" bold="true"/>
	<style name="def:link-destination" foreground="teal" italic="true"
		underline="single"/>
	<style name="def:heading" foreground="green" bold="true"/>
	<style name="def:thematic-break" foreground="peach" bold="true"/>
	<style name="def:preformatted-section" foreground="blue"/>
	<style name="def:list-marker" foreground="mauve" bold="true"/>
</style-scheme>
